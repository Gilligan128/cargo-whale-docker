#%RAML 1.0 Library

types:
  Link: !include ../types/link.raml
  State:
    enum:
      - created
      - restarting
      - running
      - paused
      - exited
      - dead

  Summary:
    properties:
      name: string
      image: string
      status: string
      state: State
      _links:
        properties:
          self: Link

  Index:
    properties:
      containers: Summary[]
      stateMetadata:
        type: object
        properties:
          created: integer
          restarting: integer
          running: integer
          paused: integer
          exited: integer
          dead: integer
      _links:
        properties:
          self: Link
          up: Link

  DetailsState:
    properties:
      pid: integer
      status: State
      error: string
      exitCode: integer
      finishedAt: string

  Details:
    properties:
      name: string
      image: string
      path: string
      state: DetailsState
      _links:
        properties:
          self: Link
          up: Link
          logs: Link
          top?: Link
